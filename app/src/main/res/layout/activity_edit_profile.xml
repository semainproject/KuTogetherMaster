<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.firebase.editProfile">

    <EditText
        android:id="@+id/nameTx"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/lastnametx"
        app:layout_constraintRight_toRightOf="@+id/Stu_id"
        android:layout_marginTop="36dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="29dp"
        app:layout_constraintLeft_toLeftOf="@+id/lastnametx"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lastnametx"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="lastname"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/male"
        app:layout_constraintRight_toRightOf="@+id/Stu_id"
        android:layout_marginTop="107dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="110dp"
        app:layout_constraintLeft_toLeftOf="@+id/Stu_id"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Stu_id"
        android:layout_width="282dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Stu_id"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="41dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/lastnametx"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="41dp" />

    <CheckBox
        android:id="@+id/male"
        android:layout_width="101dp"
        android:layout_height="49dp"
        android:text="male"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="22dp"
        app:layout_constraintRight_toRightOf="@+id/Stu_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="22dp" />

    <CheckBox
        android:id="@+id/female"
        android:layout_width="94dp"
        android:layout_height="46dp"
        android:text="female"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="45dp" />

    <Button
        android:id="@+id/Submit"
        android:layout_width="92dp"
        android:layout_height="50dp"
        android:text="Submit"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="78dp"
        app:layout_constraintRight_toRightOf="@+id/male"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/male"
        android:layout_marginRight="78dp" />

</android.support.constraint.ConstraintLayout>
